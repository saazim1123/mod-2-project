<h1 id="games_header">List of Games</h1>
<h3><%=params[:genre]%></h3>

<%= form_tag games_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
<% end %>
<br>
<%= button_to 'Most Played and Top Rated Games', most_played_path, method: :get %><br>

<% if @games.count == 0%>
    <h4>There are no games in this category</h4>
<% else %>
    <% @games.each do |game| %>
    <div id="game_list"><span><%= link_to game.title, game_path(game) %></span></div>
    <% end %>
    <br>
<% end %>
