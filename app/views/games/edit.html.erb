<h1>Edit Game</h1>

<%= form_for @game, :html => {:multipart => true} do |f| %>
  <%=f.collection_select :category_id, Category.all, :id, :genre, :prompt => "Select a category" %> <br> <br>
  <%= f.label :name %>
  <%= f.text_field :title%> <br> <br>

  <%= f.label :image%>
  <%= f.file_field :game_image%><br> <br>

  <%= f.label :description %>
  <%= f.text_area :description%><br><br>

  <%= f.label :publisher %>
  <%= f.text_field :publisher%> <br> <br>

  <%= f.button "Edit Game"%>
<% end %>